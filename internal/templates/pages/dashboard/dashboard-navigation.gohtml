{{ define "admin-navigation" }}

<div class="hidden sm:block">
    <div class="w-40 text-sm font-medium rounded-xl h-full flex flex-col justify-between">
        <div>
            <a hx-get="/admin" hx-boost="true" hx-swap="innerHTML" hx-target="#container" hx-push-url="true"
                class="block p-4 hover:bg-zinc-200 rounded-md">Home</a>
            <a hx-get="/admin/profile" hx-boost="true" hx-swap="innerHTML" hx-target="#container" hx-push-url="true"
                class="block p-4 hover:bg-zinc-200 rounded-md">Profile</a>
            <a hx-get="/admin/articles " hx-boost="true" hx-swap="innerHTML" hx-target="#container" hx-push-url="true"
                class="block p-4 hover:bg-zinc-200 rounded-md">Articles</a>
            <a hx-get="/admin/projects" hx-boost="true" hx-swap="innerHTML" hx-target="#container" hx-push-url="true"
                class="block p-4 hover:bg-zinc-200 rounded-md">Projects</a>
            <a hx-get="/admin/files" hx-boost="true" hx-swap="innerHTML" hx-target="#container" hx-push-url="true"
                class="block p-4 hover:bg-zinc-200 rounded-md">Files</a>
        </div>
        <div>
            <a href="/logout" class="block btn-red-outline mr-6">Logout</a>
        </div>
    </div>
</div>


{{ end }}
